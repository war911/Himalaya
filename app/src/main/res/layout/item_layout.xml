<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/shap_ablum_item_bg"
    android:layout_height="75dp">
    <com.example.war.ximalayaradio.views.RoundRectImageView
        android:scaleType="fitXY"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:id="@+id/album_cover"
        android:layout_width="68dp"
        android:layout_height="65dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/album_cover"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/album_title_tv"
            android:textSize="18sp"
            android:text="啦啦啦啦"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/sub_text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/album_description_tv"
            android:text="在内容打速度撒大所大所大所多撒多的法带法"
            android:layout_marginTop="3dp"
            android:textColor="@color/text_color"
            android:textSize="12sp"
            android:lines="1"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="15dp" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/play_info_icon"
                    android:layout_width="6dp"
                    android:layout_height="6dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:textSize="7sp"
                android:layout_marginLeft="2dp"
                android:text="234.5万"
                android:textColor="#ff848484"
                android:id="@+id/album_play_count"
                android:layout_width="45dp"
                android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_sound"
                    android:layout_width="6dp"
                    android:layout_height="6dp" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/album_countent_size"
                android:layout_marginLeft="2dp"
                android:text="23集"
                android:textSize="7sp"
                android:textColor="#ff848484"
                android:layout_width="45dp"
                android:layout_height="10dp" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>